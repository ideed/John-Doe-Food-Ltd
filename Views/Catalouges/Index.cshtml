@model IEnumerable<John_Doe_Food_Ltd.Models.Catalouge>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FoodName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommericalGood)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FoodName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FoodType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommericalGood)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FoodId }) |
            @Html.ActionLink("Details", "Details", new { id=item.FoodId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FoodId })
        </td>
    </tr>
}

</table>
