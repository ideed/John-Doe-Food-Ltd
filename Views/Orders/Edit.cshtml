@model John_Doe_Food_Ltd.Models.OrderViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Order.OrderId)

        <div class="form-group">
            @Html.LabelFor(model => model.Order.DateOrdered, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Order.DateOrdered, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Order.DateOrdered, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AllCustomers,"Customer",htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.ListBoxFor(m => m.SelectedCustomers, Model.AllCustomers)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AllCatalouges,"Product",htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.ListBoxFor(m => m.SelectedCatalouges, Model.AllCatalouges)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
