<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - John Doe's Foods Ltd</title>
    <link rel="stylesheet" href="style.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>    
    <style>
        .navbar-inverse .navbar-brand {
            color: white;
        }
        .navbar-inverse .navbar-nav > li > a {
            color: white;
        }
        body {
            font-family: "Times New Roman", Times, serif;
        }
        .jumbotron {
            background-color:#60D286;
            color:white;
        }
        .btn-primary {
            background-color: orange;
            border-color: orange;
        }
        .btn-primary:hover {
            background-color: darkorange;             
            border-color: darkorange;
        }
    </style>
    <div class="navbar-light navbar-inverse navbar-fixed-top" style="background-color:#38c768;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("John Doe's Foods Ltd", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Catalouge", "Index", "Catalouge")</li>
                    <li>@Html.ActionLink("Suppliers", "Index", "Supplier")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="padding-top:5%;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - John Doe's Foods Ltd</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
